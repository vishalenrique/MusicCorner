<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/widget_album_art"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/widget_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/widget_title"
        android:layout_below="@id/widget_title"
        android:text="p"/>
    <Button
        android:id="@+id/widget_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_title"
        android:layout_toRightOf="@id/widget_previous"
        android:text="pl"/>
    <Button
        android:id="@+id/widget_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_title"
        android:layout_toRightOf="@id/widget_play"
        android:text="n"/>

</RelativeLayout>